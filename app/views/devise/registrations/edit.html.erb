<h2>Edit <%= resource_name.to_s.humanize %></h2>

<main class="flex">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "column") do |f| %>
    <%= devise_error_messages! %>

    <div class="formpara">
      <%= f.label :email, class: "label_signup" %>:
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "boxstyle" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="formpara">
      <%= f.label :password, class: "label_signup" %>: 
      <%= f.password_field :password, autocomplete: "off", class: "boxstyle" %>
      <br /><i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <br />
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="formpara">
      <%= f.label :password_confirmation, class: "label_signup" %>:
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "boxstyle" %>
    </div>

    <div class="formpara">
      <%= f.label :current_password, class: "label_signup" %>: 
      <%= f.password_field :current_password, autocomplete: "off", class: "boxstyle" %>
      <br /><i>(we need your current password to confirm your changes)</i>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

</main>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
