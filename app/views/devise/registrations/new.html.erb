<h2>Sign up</h2>

<main class="flex">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "column") do |f| %>
    <%= devise_error_messages! %>

    <div class="formpara">
      <%= f.label :email, class: "label_signup" %>:
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "boxstyle" %>
    </div>

    <div class="formpara">
      <%= f.label :password, class: "label_signup" %>:
      <%= f.password_field :password, autocomplete: "off", class: "boxstyle" %>
    </div>

    <div class="formpara">
      <%= f.label :password_confirmation, class: "label_signup" %>:
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "boxstyle" %>
    </div>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

    <br /><br />
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

  <% end %>

</main>

<br />
<%= render "devise/shared/links" %>
